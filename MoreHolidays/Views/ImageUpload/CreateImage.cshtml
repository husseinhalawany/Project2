
@model string
@if (string.IsNullOrEmpty(Model))
{
    <h3 style="color:red">No Image</h3>
}
else
{
    <img src="@Url.Content(Model)" id="photoBox" 
        
        width="325";
         height="180"
         margin-top -15px;
         border 0px;
         box-shadow 0 1px 5px 0 rgba(0, 0, 0, 0.5);
         border-radius 5px;
         float left;
         background-color #e7e7e7;
          />
}

@using (Html.BeginForm("UploadProfileImage", "ImageUpload", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <input type="file" name="file" id="file"
           style="position:fixed;
        left:10px;
        top: 110px;
        " />

        <input type="submit" value="Upload"
               style="position:fixed;
        left: 60%;
        top: 50px;
        background-color:#337ab7;
        color:#fff;
        border-radius:5px;
        padding:5px;
        cursor:pointer;
        " />
}

