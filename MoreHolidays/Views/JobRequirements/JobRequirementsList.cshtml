@model IEnumerable<DataMapping.Entities.JobRequirement>

@foreach (var item in Model)
{

    using (Html.BeginForm("Delete", "JobRequirements", new { id = item.Id }, FormMethod.Post))
    {
        @Html.HiddenFor(vacancy => item.VacancyId)

        <div class="admincard col-lg-4 col-md-4 col-xs-12 col-sm-6 placeholder">
            <div class="card_body col-md-12">

                <br /><br />
                <div class="admininfo">

                    <label>
                        <i class="fa fa-user" aria-hidden="true"></i>
                        <span>@Html.DisplayFor(modelItem => item.Details)</span>
                    </label>
                    <br />
   
                </div>


                <div>
                    <div class="btn-group" role="group">
                        
                        
                                <a href="@Url.Action("Edit", new { id = item.Id , @class = "fa fa-pencil", title = "Edit Developer"})">
                                    <i class="fa fa-pencil" aria-hidden="true"></i>
                                    Update 
                                </a>
                           
                        <br />
                            
                                <span>
                                    <i class="fa fa-trash" aria-hidden="true"></i>


                                    <a id="deleteItem" class="deleteItem" data-target="#basic" data-toggle="modal" data-id=@item.Id>Delete</a>

                                </span>
                            


                    </div>
                </div>


            </div>
        </div>
    }
}
<div class="modal fade" id="basic" tabindex="-1" role="basic" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Delete Confirmation</h4>
            </div>
            <div class="modal-body">
                Are you sure you want to Delete this item?
            </div>
            <div class="modal-footer">
                <button data-dismiss="modal" type="button" class="btn btn-default">Cancel</button>
                <button id="btnContinueDelete" type="button" class="btn btn-primary">OK</button>
            </div>
        </div>
    </div>
</div>


<script>
      

        var item_to_delete;
        var RoleId;
        var isLocked;
        $(".deleteItem").click(function(e) {
            item_to_delete = $(this).data('id');

        });

        $('#btnContinueDelete').click(function () {
            window.location = "/JobRequirements/Delete/?id=" + item_to_delete;
        });



</script>










